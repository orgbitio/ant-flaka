<project xmlns:c="antlib:it.haefelinger.flaka">

	<macrodef name="fail-if-undefined">
		<attribute name="property" />
		<sequential>
			<fail message="property @{property} not defined" unless="@{property}" />
		</sequential>
	</macrodef>

